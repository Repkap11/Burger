<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.repkap11.burger">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BurgerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.UsersFractivity"
            android:label="@string/fractivity_users_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.LunchLocationsFractivity"
            android:label="@string/fractivity_lunch_locations_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AddLunchLocationFractivity"
            android:label="@string/fractivity_add_lunch_location_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".activities.AddLunchGroupFractivity"
            android:label="@string/fractivity_add_lunch_group_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".activities.AddUserFractivity"
            android:label="@string/fractivity_add_user_title"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".activities.AboutUserFractivity"
            android:label="@string/fractivity_add_user_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.WelcomeFractivity"
            android:label="@string/fractivity_welcome_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SignInFractivity"
            android:label="@string/fractivity_welcome_title"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity-alias
            android:name=".Launcher"
            android:label="@string/app_name"
            android:targetActivity=".activities.WelcomeFractivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <service android:name=".BurgerMsgService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>